<h1>Details</h1>
<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<%= link_to 'Retour Ã  la liste des restaurants', restaurants_path %>
<%= link_to "Modifier", edit_restaurant_path(@restaurant.id) %>
<%= link_to "Delete",
  restaurant_path(@restaurant),
  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }
%>
<%= link_to "Review", new_restaurant_review_path(@restaurant.id) %>
<p><strong>Reviews</strong></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <strong>Rating:</strong> <%= review.rating %>
      <br>
      <strong>Content:</strong> <%= review.content %>
      <br>
      <%= link_to "Delete",
        review_path(review),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }
      %>
    </li>
  <% end %>
</ul>
<br>
